#!/bin/bash

# Update package lists
sudo apt-get update

# Install Node.js and npm
curl -sL https://deb.nodesource.com/setup_18.x | sudo bash
sudo apt-get install -y nodejs

# Install LLVM
sudo apt-get install -y llvm

# Install GCC
sudo apt-get install -y gcc

# Verify installations
node -v
npm -v
llvm-config --version
gcc --version
